{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-clean-order"
  ],
  "plugins": [
    "stylelint-order",
    "@stylistic/stylelint-plugin"
  ],
  "rules": {
    "color-hex-length": "long",
    "@stylistic/color-hex-case": "upper",
    "@stylistic/indentation": 4,
    "selector-class-pattern": [
      "^[a-z][a-z0-9]*(__[a-z0-9]+)*$"
    ]
  }
}